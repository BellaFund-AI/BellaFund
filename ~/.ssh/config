# 现有的配置
Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/evolve_ai_ed25519
    AddKeysToAgent yes
    UseKeychain yes

# BellaFund 配置 - 使用不同的主机名和端口
Host github.com-bellafund
    HostName ssh.github.com
    User git
    Port 443
    IdentityFile ~/.ssh/id_ed25519_bellafund
    AddKeysToAgent yes
    UseKeychain yes
    IdentitiesOnly yes  # 强制只使用指定的密钥